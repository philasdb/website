---
import { getPassage } from "../lib/bible";

const { reference } = Astro.props;

const passage = await getPassage(reference);

var text = "";

if (passage !== null) {
    const verses = passage.verses
        .map((v) => `<sup>${v.verse}</sup>${v.text}`)
        .join("");
    text = `<em>${verses}</em>`;
}
---

<Fragment set:html={text} />
