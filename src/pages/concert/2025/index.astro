--- 
import MainLayout from "../../../layouts/MainLayout.astro";
---

<MainLayout title="Annual Fundraising Concert 2025" canonical="/concert/2025">
  <section style="max-width: 700px; margin: 2rem auto; background: #f7f2ff; border-radius: 1.5rem; box-shadow: 0 4px 24px rgba(80,0,80,0.08); overflow: hidden;">
    <img src="/src/assets/img/concert-2025-poster.png" alt="Annual Fundraising Concert Poster" style="width: 100%; display: block; border-radius: 1.5rem 1.5rem 0 0;" />
    <div style="padding: 2rem;">
      <h1 style="color: #6c2eb7; font-size: 2.2rem; margin-bottom: 0.5rem; font-family: 'Montserrat', sans-serif; font-weight: 700;">Annual Fundraising Concert</h1>
      <p style="font-size: 1.1rem; color: #222; margin-bottom: 1.5rem;">Join us for an inspiring evening of music and fellowship at Philadelphia 7th Day Baptist Church!</p>
      <ul style="list-style: none; padding: 0; margin-bottom: 1.5rem;">
        <li><strong>Date:</strong> <span style="color: #6c2eb7;">4th October 2025</span></li>
        <li><strong>Time:</strong> <span style="color: #6c2eb7;">4:00 PM</span></li>
        <li><strong>Location:</strong> 6841 Ardleigh Street, Philadelphia, PA 19119</li>
      </ul>
      <div style="background: #e9d8fd; border-radius: 1rem; padding: 1rem 1.5rem; margin-bottom: 1.5rem;">
        <h2 style="color: #6c2eb7; font-size: 1.3rem; margin-bottom: 0.5rem;">Tickets</h2>
        <ul style="list-style: none; padding: 0;">
          <li>Ages 17 &amp; Older: <strong>$20</strong></li>
          <li>Ages 5-16: <strong>$10</strong></li>
          <li>Under 5 years: <strong>Free</strong></li>
        </ul>
      </div>
      <div style="margin-bottom: 1.5rem;">
        <span style="background: #ffcb05; color: #6c2eb7; padding: 0.5rem 1rem; border-radius: 0.5rem; font-weight: 600;">REFRESHMENTS ON SALE</span>
      </div>
      <div style="margin-bottom: 1.5rem;">
        <strong>RSVP:</strong> <a href="mailto:philasdb@gmail.com" style="color: #6c2eb7; text-decoration: underline;">philasdb@gmail.com</a>
      </div>
    </div>
  </section>
</MainLayout>