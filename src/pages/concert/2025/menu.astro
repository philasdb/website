---
import { Image } from 'astro:assets';
import cashappImage from '../../../images/cashapp.webp';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Concert Menu - October 4th, 2025</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Arial', sans-serif;
      padding: 1rem;
      max-width: 800px;
      margin: 0 auto;
      background: white;
    }

    .menu-container {
      padding: 1rem;
    }

    h1 {
      color: #000;
      text-align: center;
      font-size: 2rem;
      margin-bottom: 0.25rem;
      font-weight: bold;
    }

    .subtitle {
      text-align: center;
      font-size: 1rem;
      color: #000;
      margin-bottom: 1.25rem;
    }

    .section {
      margin-bottom: 1.25rem;
    }

    .section-title {
      color: #000;
      font-size: 1.4rem;
      margin-bottom: 0.6rem;
      border-bottom: 2px solid #000;
      padding-bottom: 0.3rem;
      font-weight: bold;
    }

    .menu-item {
      display: flex;
      justify-content: space-between;
      padding: 0.5rem 0;
      border-bottom: 1px dashed #000;
    }

    .menu-item:last-child {
      border-bottom: none;
    }

    .item-name {
      font-size: 1.15rem;
      font-weight: 600;
      color: #000;
    }

    .item-description {
      font-size: 0.95rem;
      color: #000;
      margin-top: 0.15rem;
      font-style: italic;
    }

    .item-price {
      font-size: 1.15rem;
      font-weight: bold;
      color: #000;
      white-space: nowrap;
      margin-left: 1rem;
    }

    .cashapp-section {
      text-align: center;
      margin-top: 1.25rem;
      padding-top: 1rem;
      border-top: 2px solid #000;
    }

    .cashapp-title {
      font-size: 1rem;
      color: #000;
      margin-bottom: 0.4rem;
      font-weight: bold;
    }

    .cashapp-qr {
      max-width: 150px;
      margin: 0 auto;
    }

    @media print {
      body {
        padding: 0.5rem;
      }

      .menu-container {
        border-width: 2px;
        padding: 1rem;
      }
    }
  </style>
</head>
<body>
  <div class="menu-container">
    <div class="section">
      <h2 class="section-title">Platters</h2>
      <div class="menu-item">
        <div>
          <div class="item-name">Chicken Platter</div>
          <div class="item-description">Served with choice of sides</div>
        </div>
        <div class="item-price">$_____</div>
      </div>
      <div class="menu-item">
        <div>
          <div class="item-name">Fish Platter</div>
          <div class="item-description">Served with choice of sides</div>
        </div>
        <div class="item-price">$_____</div>
      </div>
      <div class="menu-item">
        <div>
          <div class="item-name">Curry Goat Platter</div>
          <div class="item-description">Served with choice of sides</div>
        </div>
        <div class="item-price">$_____</div>
      </div>
    </div>

    <div class="section">
      <h2 class="section-title">Appetizers</h2>
      <div class="menu-item">
        <div>
          <div class="item-name">Fish Fritters</div>
        </div>
        <div class="item-price">$_____</div>
      </div>
    </div>

    <div class="section">
      <h2 class="section-title">Desserts</h2>
      <div class="menu-item">
        <div>
          <div class="item-name">Banana or Sweet Potato Bread </div>
        </div>
        <div class="item-price">$_____</div>
      </div>
      <div class="menu-item">
        <div>
          <div class="item-name">Banana or Sweet Potato Bread (Half)</div>
        </div>
        <div class="item-price">$_____</div>
      </div>
    </div>

    <div class="section">
      <h2 class="section-title">Beverages</h2>
      <div class="menu-item">
        <div>
          <div class="item-name">Drinks & Water</div>
        </div>
        <div class="item-price">$1.00</div>
      </div>
    </div>

    <div class="cashapp-section">
      <p class="cashapp-title">Pay with Cash App</p>
      <div class="cashapp-qr">
        <Image src={cashappImage} alt="Cash App Payment" />
      </div>
    </div>
  </div>
</body>
</html>
