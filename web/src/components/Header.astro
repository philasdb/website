---
import youtubeIcon from "../images/youtube.png";
import facebookIcon from "../images/facebook.png";
import { Picture } from "astro:assets";

const url = "https://psdb-livestream.fly.dev/api/status";
//const url = "http://localhost:10000/api/status";
---

<header
  style="position: fixed; top: 0; width:100%; background-color: white; z-index: 1000; padding: 4px; box-shadow: 0 2px 5px rgba(0,0,0,0.1);"
>
  <nav class="navbar-full">
    <ul>
      <li>
        <a href="/"
          ><strong>PHILADELPHIA 7<sup>th</sup> DAY BAPTIST CHURCH</strong></a
        >
      </li>
    </ul>
    <ul>
      <li>
        <a
          href="https://www.youtube.com/@PhiladelphiaSDBChurch"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Visit our YouTube channel"
        >
          <Picture
            src={youtubeIcon}
            formats={["avif", "webp", "jpg"]}
            alt="YouTube"
            width={64}
            height={64}
            loading="eager"
          />
        </a>
      </li>
      <li>
        <a
          href="https://www.facebook.com/PhilaSDB/"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Visit our Facebook page"
        >
          <Picture
            src={facebookIcon}
            formats={["avif", "webp", "jpg"]}
            alt="Facebook"
            width={48}
            height={48}
            loading="eager"
          />
        </a>
      </li>
    </ul>
    <ul>
      <li><a href="/">HOME</a></li>
      <li><a href="/about">ABOUT</a></li>
<li>
        <livestream-link url={url}></livestream-link>
      </li>
      <li>
        <a href="/sermons">SERMONS</a>
      </li>
      <li><a href="/giving">GIVING</a></li>
    </ul>
  </nav>
  <nav class="navbar-mobile">
    <ul>
      <li>
        <strong>PHILADELPHIA 7<sup>th</sup> DAY BAPTIST CHURCH</strong>
      </li>
    </ul>
    <ul>
      <li>
        <details class="dropdown">
          <summary><strong>MENU</strong></summary>
          <ul dir="rtl">
            <li><a href="/"><strong>HOME</strong></a></li>
            <li><a href="/about"><strong>ABOUT</strong></a></li>
            <li>
              <a href="/livestream"><strong>LIVESTREAM</strong></a>
            </li>
            <li>
              <a href="/sermons"><strong>SERMONS</strong></a>
            </li>
            <li><a href="/giving"><strong>GIVING</strong></a></li>
          </ul>
        </details>
      </li>
    </ul>
  </nav>
</header>

<script>
  import "./LivestreamLink.ts";
</script>
